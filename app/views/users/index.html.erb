
<div class="col-md-8 mx-auto">
  <h1>Dogs Information</h1>
</div>

<%# カルーセル %>
<div id="carouselExampleIndicators" class="carousel slide col-md-8 col-xl-6 mx-auto" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="dogs/pic_1.jpg" alt="Dogs slide">
    </div>
    <% (2..9).each do |n| %>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= "/dogs/pic_#{n}.jpg" %>" alt="Dogs slide">
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<%# カルーセルここまで %>

<div class="box col-xl-8 mx-auto">
  <%# ページネーション %>
  <%= paginate @users %>

  <%# テーブル %>
  <div class="table-narrow">
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <%= flash[:warning] %>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.avatar.thumb.url, 'data-lightbox': "abc" if user.avatar? %></td>
            <td><%= user.name %></td>
            <td><%= user.age %></td>
            <td><%= link_to 'プロフィール', user, class: "btn btn-outline-info btn-sm" %></td>
            <td><%= link_to '編集', edit_user_path(user), class: "btn btn-outline-warning btn-sm" if user.owner == current_owner %></td>
            <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" if user.owner == current_owner %></td>
            <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
              写真を見る
            </button></td>
          </tr>

          <!-- Modal -->
          <%= render partial: '/layouts/modal', locals: {user: user} %>

        <% end %>
      </tbody>
    </table>
    <%# ページネーション %>
    <%= paginate @users %>

  </div>
  <%# テーブルここまで %>

</div>

