<p id="notice"><%= notice %></p>
<div class="box col-md-12">
  <div class="box col-md-8">
    <h1>Users</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.age %></td>
            <td><%= link_to 'Show', user, class: "btn btn-outline-info btn-sm" %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-warning btn-sm" %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <div class="col-md-12">
    <%= link_to 'New User', new_user_path, class: "btn btn-outline-primary" %>
  </div>
  <br>
  <div class="box col-md-12" style="font-size: 0;"><!--ボタン間の隙間をなくすために、フォントサイズを0に。-->
